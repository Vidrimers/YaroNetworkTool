# VPN SERVER CONFIGURATION
SERVER_IP=your_server_ip
SERVER_PORT=443

# MANAGEMENT API CONFIGURATION
API_PORT=333
API_HOST=0.0.0.0
API_KEY=your_secure_api_key_here

# DATABASE
DB_PATH=./database/vpn.db

# X-RAY CONFIGURATION
XRAY_CONFIG_PATH=/usr/local/etc/xray/config.json
XRAY_LOG_PATH=/var/log/xray/access.log
XRAY_PUBLIC_KEY=your_xray_public_key_here
XRAY_SHORT_ID=your_xray_short_id_here
XRAY_SNI=www.microsoft.com
XRAY_PORT=8443
SS2022_PASSWORD=your_32_char_base64_password_here

# SECURITY
JWT_SECRET=your_jwt_secret_key_change_me_in_production
ALLOW_CORS=true
CORS_ORIGIN=*

# BACKUP
BACKUP_DIR=/opt/xray-vpn-backup
BACKUP_RETENTION_DAYS=30

# ENVIRONMENT
NODE_ENV=production
